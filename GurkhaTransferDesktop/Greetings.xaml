<Window x:Class="GurkhaTransferDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GurkhaTransferDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Center"
                   Margin="0,0,0,100" TextWrapping="Wrap"
                   Text="Select a message option and then choose the Display button"
                   VerticalAlignment="Center" />
        <RadioButton x:Name="HelloButton"
                     Content="Hello"
                     HorizontalAlignment="center"
                     VerticalAlignment="Center"
                     Margin="0,0,200,0"
                     IsChecked="True" />
        <RadioButton x:Name="GoodByeButton"
                     Content="Bye"
                     HorizontalAlignment="center"
                     VerticalAlignment="Center"
                     Margin="200,0,0,0" />
        <Button x:Name="DisplayButton"
                Click="Button_Click"
                Content="Display"
                HorizontalAlignment="Center"
                Margin="0,100,0,0"
                VerticalAlignment="Center"
                Width="75" />
    </Grid>
</Window>